<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">

  <LinearLayout
      android:layout_width="460dp"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De mes fenêtres, je vois la Seine qui coule… la grande et large Seine qui va de Rouen au Havre, couverte de \n
        bateaux qui passent.\n
        \n
A gauche là-bas, Rouen, la vaste ville aux toits bleus, sous le peuple pointu des clochers gothiques… dominés \n
par la flèche de fonte de la cathédrale, et pleins de cloches qui sonnent dans l’air bleu des belles matinées, jetant \n
jusqu’à moi leur doux et lointain bourdonnement de fer… \n
\n
G. De Maupassant, Le Horla"
        android:id="@+id/textView"
        app:x_in="5.0"
        app:x_out="5.0"
        app:a_in="5.0"
        app:a_out="5.0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="son2"
          android:id="@+id/button_son2"
          android:tag="son"
          app:x_in="5.0"
          app:x_out="5.0"
          app:a_in="5.0"
          app:a_out="5.0"
          android:layout_marginLeft="60dp"
          android:layout_marginStart="60dp"
          android:layout_alignTop="@+id/button_fan2"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="fan"
          android:id="@+id/button_fan2"
          android:tag="fan"
          app:x_in="5.0"
          app:x_out="5.0"
          app:a_in="5.0"
          app:a_out="5.0"
          android:layout_marginLeft="51dp"
          android:layout_marginStart="51dp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/button_son2"
          android:layout_toEndOf="@+id/button_son2" />

    </RelativeLayout>


  </LinearLayout>


  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toEndOf="@+id/textView"
      android:layout_above="@+id/button_son2"
      android:layout_toRightOf="@+id/textView"
      android:id="@+id/linearLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageView
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:id="@+id/imageView"
          android:src="@drawable/ImageAppli2"
          app:x_in="5.0"
          app:x_out="5.0"
          app:a_in="5.0"
          app:a_out="5.0"
          android:layout_gravity="center"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="false"
          android:layout_marginRight="50dp"
          android:layout_marginBottom="75dp" />
    </RelativeLayout>

  </LinearLayout>


</LinearLayout>